{
  "manifest_version": 3,
  "name": "My Secure Auth Extension",
  "version": "1.0.0",

  "permissions": ["cookies", "storage"],
  "host_permissions": ["http://localhost:3000/*"],

  "action": {
    "default_popup": "index.html"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
